                            <TreeViewItem Header="Fuel Cost Analysis (Last 12 Years)"></TreeViewItem>
                            <TreeViewItem Header="Fuel Cost Analysis (Last 3 Years)"></TreeViewItem>
                            <TreeViewItem Header="Fuel Cost Analysis (Prior Years)"></TreeViewItem>
                        </TreeViewItem>
                    </TreeViewItem>
                    <TreeViewItem Header="History (Maintainance)">
                        <TreeViewItem Header="History (Cost Summary)"></TreeViewItem>
                        <TreeViewItem Header="History (Detailed)"></TreeViewItem>
                        <TreeViewItem Header="History (Overview)"></TreeViewItem>
                        <TreeViewItem Header="History and Fuel (Cost Summary)"></TreeViewItem>
                        <TreeViewItem Header="Inventory History (Detailed)"></TreeViewItem>
                        <TreeViewItem Header="Labor History (Cost Summary)"></TreeViewItem>
