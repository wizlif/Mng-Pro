                    </TreeViewItem>
                    <TreeViewItem Header="Purchase Orders">
                        <TreeViewItem Header="Purchase Order Receipts"></TreeViewItem>
                        <TreeViewItem Header="Purchase Order Summary (Closed)"></TreeViewItem>
                        <TreeViewItem Header="Purchase Order Summary (Outstanding)"></TreeViewItem>
                        <TreeViewItem Header="Purchase Order Vendor Summary (Closed)"></TreeViewItem>
                        <TreeViewItem Header="Purchase Order Vendor Summary (Outstanding)"></TreeViewItem>
                        <TreeViewItem Header="Purchase Orders (Closed)"></TreeViewItem>
                        <TreeViewItem Header="Purchase Orders (Outstanding)"></TreeViewItem>
                    </TreeViewItem>
                    <TreeViewItem Header="Vendors">
                        <TreeViewItem Header="Vendor Listing"></TreeViewItem>
                        <TreeViewItem Header="Vendor Usage (Detailed)"></TreeViewItem>
                        <TreeViewItem Header="Vendor Usage (Summary)"></TreeViewItem>
                    </TreeViewItem>
                    <TreeViewItem Header="Work Orders">
                        <TreeViewItem Header="Work Order Summary"></TreeViewItem>
                        <TreeViewItem Header="Work Orders (Closed)"></TreeViewItem>
                        <TreeViewItem Header="Work Orders (Open)"></TreeViewItem>
                        <TreeViewItem Header="Statistical">
                            <TreeViewItem Header="Word Order Analysis (Current Year)"></TreeViewItem>
                            <TreeViewItem Header="Word Order Analysis (Last 3 Years)"></TreeViewItem>
                            <TreeViewItem Header="Word Order Analysis (Prior Year)"></TreeViewItem>
                        </TreeViewItem>
                    </TreeViewItem>
                </TreeView>
                <DockPanel LastChildFill="True">
                <DocumentViewer>
                        <FixedDocument>
                            <PageContent>
                                <FixedPage x:Name="FixedPage" Width="793.76" Height="1122.56">
                                    <!-- Page 1 Begins Here -->
                                    <DockPanel   Width="693.76"  Margin="50" LastChildFill="True">
                                        <DockPanel DockPanel.Dock="Top">
                                            <DockPanel.Background>
                                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                    <LinearGradientBrush.RelativeTransform>
                                                        <TransformGroup>
                                                            <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                                            <SkewTransform CenterY="0.5" CenterX="0.5"/>
                                                            <RotateTransform Angle="90" CenterY="0.5" CenterX="0.5"/>
                                                            <TranslateTransform/>
                                                        </TransformGroup>
                                                    </LinearGradientBrush.RelativeTransform>
                                                    <GradientStop Color="#FF005DFF" Offset="0"/>
                                                    <GradientStop Color="White" Offset="1"/>
                                                </LinearGradientBrush>
                                            </DockPanel.Background>
                                            <Label DockPanel.Dock="Left" VerticalAlignment="Center"  FontFamily="Arial Black" FontStyle="Italic" FontSize="20">Report #1</Label>
                                            <Label DockPanel.Dock="Right" VerticalAlignment="Center" Foreground="White" FontFamily="Arial Black" FontStyle="Italic" FontSize="16" HorizontalAlignment="Right">Other header</Label>
                                        </DockPanel>
                                        <DockPanel >
                                            <DataGrid x:Name="WODatagrid" ItemsSource="{Binding WOBind}" AutoGenerateColumns="False">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="WO #" Binding="{Binding 'WO no'}"/>
                                                    <DataGridTextColumn Header="Equipment" Binding="{Binding Equipment}"/>
                                                    <DataGridTextColumn Header="Date Issued" Binding="{Binding 'Date issued'}"/>
                                                    <DataGridTextColumn Header="Date Comp." Binding="{Binding 'Date complete'}"/>
                                                    <DataGridTextColumn Header="Vendor" Binding="{Binding 'Vendor name'}"/>
                                                    <DataGridTextColumn Header="Assigned To" Binding="{Binding 'Employee assignment'}"/>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </DockPanel>
                                    </DockPanel>
                                </FixedPage>
                            </PageContent>
                        </FixedDocument>
                    </DocumentViewer>
                </DockPanel>
            </DockPanel>
        </Viewbox>
    </DockPanel>
</Window>
