                                <TreeViewItem Header="General Expenses Analysis (Prior Year)"/>
                                <TreeViewItem Header="General Expenses History (Detailed)"/>
                            </TreeViewItem>
                        </TreeViewItem>
                        <TreeViewItem Header="Loan/Lease Information"/>
                        <TreeViewItem Header="Odometer Replacement History"/>
                        <TreeViewItem Header="Purchase Information"/>
                        <TreeViewItem Header="Specifications"/>
                    </TreeViewItem>
                    <TreeViewItem Header="Fuel">
                        <TreeViewItem Header="Fuel Transaction History (Detailed)"></TreeViewItem>
                        <TreeViewItem Header="Fuel Transaction History (Summary - by Job Site)"></TreeViewItem>
                        <TreeViewItem Header="Fuel Transaction History (Summary)"></TreeViewItem>
                        <TreeViewItem Header="Fuel Transaction by State/Prov (Detailed)"></TreeViewItem>
