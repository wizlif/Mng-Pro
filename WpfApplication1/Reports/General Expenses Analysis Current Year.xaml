                        <TreeViewItem Header="Invoices (Outstanding)"></TreeViewItem>
                        <TreeViewItem Header="Invoices (Paid)"></TreeViewItem>
                    </TreeViewItem>
                    <TreeViewItem Header="Maintainance">
