                        <TreeViewItem Header="Top 20 Costly (Operating)"></TreeViewItem>
                    </TreeViewItem>
                    <TreeViewItem Header="Inventory">
                        <TreeViewItem Header="Inventory Listing"></TreeViewItem>
                        <TreeViewItem Header="Inventory Listing (By Category)"></TreeViewItem>
                        <TreeViewItem Header="Inventory Listing (By Vendor)"></TreeViewItem>
                        <TreeViewItem Header="Inventory Stock Value (Detailed)"></TreeViewItem>
