                        <TreeViewItem Header="Total Operating (Cost Summary)"></TreeViewItem>
                        <TreeViewItem Header="Vendor Service (Detailed)"></TreeViewItem>
                        <TreeViewItem Header="Statistical"/>
                        <TreeViewItem Header="History Cost Analysis (Current Year)"></TreeViewItem>
                        <TreeViewItem Header="History Cost Analysis (Last 12 Years)"></TreeViewItem>
                        <TreeViewItem Header="History Cost Analysis (Last 3 Years)"></TreeViewItem>
