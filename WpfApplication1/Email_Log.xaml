<Window x:Class="WpfApplication1.Email_Log"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        x:Name="EmailLog"
      Height="300" Width="300"
        
      Title="Email Log">

    <DockPanel Margin="0,0,0,5"  Width="{Binding ElementName=EmailLog,Path=ActualWidth}"   x:Name="StackPanel" HorizontalAlignment="Center" VerticalAlignment="Center" >
        <Viewbox  x:Name="ViewBox" Width="{Binding ElementName=StackPanel,Path=ActualWidth}">
            <DockPanel LastChildFill="True" Width="{Binding ElementName=EmailLog,Path=ActualWidth}" Height="{Binding ElementName=EmailLog,Path=ActualHeight}">
                <StackPanel Margin="0,5,0,0"  VerticalAlignment="Bottom" DockPanel.Dock="Bottom"   Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Width="90" Height="30" Margin="0,0,10,0" Content="Send"/>
                    <Button Width="90" Height="30" Content="Close"/>
                </StackPanel>
                <DataGrid/>
            </DockPanel>
        </Viewbox>
    </DockPanel>
</Window>
